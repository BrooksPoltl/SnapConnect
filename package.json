{
  "name": "snapconnect",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "yarn validate && expo start",
    "android": "yarn validate && expo run:android",
    "ios": "yarn validate && expo run:ios",
    "web": "yarn validate && expo start --web",
    "eject": "yarn validate && expo eject",
    "debug": "yarn validate && open 'rndebugger://set-debugger-loc?host=localhost&port=19000'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 8",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "yarn type-check && yarn format:check && yarn lint:check",
    "prebuild": "yarn validate"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native/babel-preset": "^0.80.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@supabase/supabase-js": "^2.50.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "expo": "53.0.12",
    "expo-build-properties": "~0.14.6",
    "expo-camera": "~16.1.8",
    "expo-dev-client": "~5.2.1",
    "expo-image-picker": "~16.1.4",
    "expo-location": "~18.1.5",
    "expo-media-library": "~17.1.7",
    "expo-sharing": "~13.1.5",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.4",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-gifted-chat": "^2.4.0",
    "react-native-keyboard-controller": "^1.17.5",
    "react-native-maps": "1.20.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-vector-icons": "^10.2.0",
    "react-native-vision-camera": "^3.6.17",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@types/react": "~19.0.10",
    "@types/react-native": "~0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.6.0",
    "typescript": "^5.3.3"
  },
  "private": true
}
